<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:background="@drawable/item_borders"
                                              android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:id="@+id/faqRecyclerView"
                                               android:layout_weight="1"
                                               android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_margin="8dp"
                                                  android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton android:layout_width="match_parent"
                                                   android:text="@string/ok"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/faqOKButton"
                                                   android:layout_marginTop="8dp"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"                                                   android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>