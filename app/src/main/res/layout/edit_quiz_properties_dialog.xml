<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:background="@color/colorPrimary"
                                              android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                 android:text="@string/editQuiz"
                                                 android:textSize="26sp"
                                                 android:gravity="center_horizontal"
                                                 android:layout_height="wrap_content"/>



        <com.google.android.material.textfield.TextInputEditText
                android:drawableEnd="@drawable/ic_title"
                android:id="@+id/dialogPropertiesQuizTitleEditText"
                android:padding="8dp"
                android:textColorHint="@color/textColorSecondary"
                android:hint="@string/quizTitleText" style="@style/loginEditTextStyle"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:drawableEnd="@drawable/ic_numbered"
                android:id="@+id/dialogPropertiesQuizQuestionsCount"
                android:inputType="number"
                android:maxLength="2"
                android:textColorHint="@color/textColorSecondary"
                android:hint="@string/quizQuestionsCount" style="@style/loginEditTextStyle"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_margin="8dp"
                                                  android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content"
                                                   android:layout_weight="1"
                                                   android:text="@string/confirm"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/dialogPropertiesConfirmButton"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"                                                   android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content"
                                                   android:layout_weight="1"
                                                   android:text="@string/DeleteCurrentQuestion"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/dialogDeleteCurrentQuestionButton"
                                                   android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content"
                                                   android:layout_weight="1"
                                                   android:text="@string/cancel"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/dialogPropertiesCancelButton"
                                                   android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>