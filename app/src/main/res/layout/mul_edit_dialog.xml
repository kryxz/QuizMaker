<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="8dp">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/questionText"
            style="@style/loginEditTextStyle"
            android:hint="@string/questionsText"
            android:maxLength="200"
            android:padding="8dp"
            android:textColor="?attr/textColor"
            android:textColorHint="?attr/textColorHint"
            android:textSize="22sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/multipleChoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/firstChoice"
            style="@style/choicesEditText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/secondChoice"
            style="@style/choicesEditText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/thirdChoice"
            style="@style/choicesEditText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fourthChoice"
            style="@style/choicesEditText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/answerText"
            style="@style/choicesEditText"
            android:hint="@string/answer" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmEditQuestion"
            style="@style/QuestionFormButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/confirm" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelEditQuestion"
            style="@style/QuestionFormButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/cancel" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>