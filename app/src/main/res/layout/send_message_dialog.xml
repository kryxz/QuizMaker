<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:background="@color/colorPrimary"
                                              android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                 android:text="@string/sendMessage"
                                                 android:textSize="26sp"
                                                 android:gravity="center_horizontal"
                                                 android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputEditText
            android:drawableEnd="@drawable/ic_message"
            android:id="@+id/messageText"
            android:padding="8dp"
            android:maxLength="200"
            android:textColorHint="@color/textColorSecondary"
            android:hint="@string/messageText" style="@style/loginEditTextStyle"/>

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_margin="8dp"
                                                  android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content"
                                                   android:layout_weight="1"
                                                   android:text="@string/send"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/sendNowButton"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"                                                   android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content"
                                                   android:layout_weight="1"
                                                   android:text="@string/cancel"
                                                   android:layout_marginStart="4dp"
                                                   android:layout_marginEnd="4dp"
                                                   style="@style/QuestionFormButtonStyle"
                                                   android:id="@+id/cancelSendButton"
                                                   android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>