<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:background="?attr/colorPrimary"
                                              android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:orientation="vertical"
                                                  android:layout_weight="2"
                                                  android:id="@+id/editQuestionsLayout"
                                                  android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/questionsTextEditText"
                    android:padding="8dp"
                    android:textSize="22sp"
                    android:maxLength="200"
                    android:hint="@string/questionsText" style="@style/loginEditTextStyle"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:orientation="vertical"
                                                      android:id="@+id/multipleChoiceLayout"
                                                      android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/firstChoice"
                    style="@style/choicesEditText"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/secondChoice"
                    style="@style/choicesEditText"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/thirdChoice"
                    style="@style/choicesEditText"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/fourthChoice"
                    style="@style/choicesEditText"/>
            <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/correctAnswerSpinner"
                    android:popupBackground="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatSpinner>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatCheckBox
                android:text="@string/trueStatement"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="?attr/textColorHint"
                android:id="@+id/isStatementTrueCheckBox"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:layout_marginTop="16dp"
                                                      android:layout_marginBottom="8dp"
                                                      android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/previousQuestionButton"
                    android:text="@string/previousQuestion"
                    android:layout_weight="1"
                    style="@style/QuestionFormButtonStyle"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/nextQuestion"
                    android:id="@+id/nextQuestionButton"
                    android:layout_weight="1"
                    style="@style/QuestionFormButtonStyle"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:id="@+id/reviewQuizButton"
                style="@style/QuestionFormButtonStyle"
                android:text="@string/reviewThenPost"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:visibility="gone"
                                               android:layout_weight="3"
                                               android:id="@+id/questionsRecyclerView"
                                               android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>


    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:id="@+id/bottomLayoutViewEdit"
                                                  android:visibility="gone"
                                                  android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backToEditingButton"
                android:layout_weight="1"
                style="@style/QuestionFormButtonStyle"
                android:text="@string/backToEditingButton"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/publishQuizButton"
                android:layout_weight="1"
                style="@style/QuestionFormButtonStyle"
                android:text="@string/publishQuizText"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>