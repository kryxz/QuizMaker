<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="@color/colorPrimary"
                                              tools:context=".MessagesFragment">
    <ProgressBar android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/MessagesProgressBar"
    />
    <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                 android:text="@string/noMessages"
                                                 android:gravity="center"
                                                 android:textSize="34sp"
                                                 android:id="@+id/noMessagesTextView"
                                                 android:visibility="gone"
                                                 android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:id="@+id/MessagesRecyclerView"
                                               android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.appcompat.widget.LinearLayoutCompat>