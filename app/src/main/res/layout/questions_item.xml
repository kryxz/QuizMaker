<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:background="@color/colorPrimary"
                                              android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:orientation="vertical"
                                                  android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:textSize="28sp"
                                                     android:textAlignment="center"
                                                     android:id="@+id/quizQuestionText"
                                                     android:text="@string/reviewTemplate"
                                                     android:layout_height="wrap_content"/>

        <RadioGroup android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/quizChoicesGroup">

            <androidx.appcompat.widget.AppCompatRadioButton android:layout_width="match_parent"
                                                            android:text="@string/cannotBeEmpty"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            android:layout_marginBottom="8dp"
                                                            android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatRadioButton android:layout_width="match_parent"
                                                            android:text="@string/cannotBeEmpty"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            android:layout_marginBottom="8dp"
                                                            android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatRadioButton android:layout_width="match_parent"
                                                            android:text="@string/cannotBeEmpty"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            android:layout_marginBottom="8dp"
                                                            android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatRadioButton android:layout_width="match_parent"
                                                            android:text="@string/cannotBeEmpty"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            android:layout_marginBottom="8dp"
                                                            android:layout_height="wrap_content"/>
        </RadioGroup>


        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:id="@+id/submitAnswers"
                style="@style/QuestionFormButtonStyle"
                android:text="@string/finishQuiz"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>