<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
            android:layout_width="match_parent"
            android:id="@+id/drawer_layout"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
    app:layout_constraintBottom_toBottomOf="parent">
    <fragment
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navGraph="@navigation/navigation"
            app:defaultNavHost="true"
            android:id="@+id/navigationHost" android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="1dp"/>

    <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            app:menu="@menu/menu"
            android:layout_gravity="start"
            android:id="@+id/navView"
            android:layout_height="match_parent"/>

</androidx.drawerlayout.widget.DrawerLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>