<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mada</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
    </style>


    <style name="loginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="QuestionFormButtonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="choicesEditText">
        <item name="android:hint">@string/aChoice</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">144</item>
    </style>


    <style name="reviewQuestionAnswerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
